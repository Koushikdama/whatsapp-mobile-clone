rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isParticipant(participants) {
      return isAuthenticated() && request.auth.uid in participants;
    }
    
    // Check if user is involved in a follow relationship
    function isFollowParticipant(followerId, followingId) {
      return isAuthenticated() && (request.auth.uid == followerId || request.auth.uid == followingId);
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (needed for follow system)
      allow read: if isAuthenticated();
      
      // Users can create their own profile
      allow create: if isOwner(userId);
      
      // Update: Allow owner changes OR follow-related updates from follow service
      allow update: if isAuthenticated() && (
        isOwner(userId) || 
        // Allow follow service to update followers/following arrays and counts
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followers', 'followersCount', 'following', 'followingCount'])
      );
      
      allow delete: if false;
    }
    
    // Chats collection
    match /chats/{chatId} {
      allow read: if isAuthenticated() && isParticipant(resource.data.participants);
      allow create: if isAuthenticated() && isParticipant(request.resource.data.participants);
      allow update: if isAuthenticated() && isParticipant(resource.data.participants);
      allow delete: if isAuthenticated() && (resource.data.createdBy == request.auth.uid || resource.data.groupRoles[request.auth.uid] == 'owner');
      
      match /userSettings/{userId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Messages Collection
    match /messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated() && resource.data.senderId == request.auth.uid;
    }
    
    // Calls collection
    match /calls/{callId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Status updates collection
    match /statusUpdates/{statusId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Channels collection
    match /channels/{channelId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    // Game configs collection
    match /gameConfigs/{configId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // Follow relationships collection (UPDATED to match code: 'follows' not 'followRelationships')
    match /follows/{relationshipId} {
      // Read: Anyone authenticated can read follow relationships
      // (needed to check follow status, get followers/following lists)
      allow read: if isAuthenticated();
      
      // Create: Only the follower can create a follow relationship for themselves
      allow create: if isAuthenticated() && request.resource.data.followerId == request.auth.uid;
      
      // Update: Either participant can update (for accepting/rejecting requests)
      // Follower can update to cancel, followingId user can update to accept/reject
      allow update: if isAuthenticated() && (
        resource.data.followerId == request.auth.uid ||  // Follower can cancel
        resource.data.followingId == request.auth.uid     // Target can accept/reject
      );
      
      // Delete: Either the follower (to unfollow) or the target (to remove follower) can delete
      allow delete: if isAuthenticated() && (
        resource.data.followerId == request.auth.uid ||   // Follower can unfollow
        resource.data.followingId == request.auth.uid     // Target can remove follower
      );
    }
    
    // LEGACY: Keep old collection name for backward compatibility
    match /followRelationships/{relationshipId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.followerId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.followerId == request.auth.uid;
      allow update: if isAuthenticated();
    }
    
    
    // Group Invite Links collection
    match /groupInviteLinks/{linkId} {
      // Read: Any authenticated user can read invite links (needed to validate and join groups)
      allow read: if isAuthenticated();
      
      // Create: Any authenticated user can create invite links
      allow create: if isAuthenticated();
      
      // Update: Any authenticated user can update (to deactivate or increment usage)
      allow update: if isAuthenticated();
      
      // Delete: Prevent deletion (links should be deactivated, not deleted)
      allow delete: if false;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Read: Users can only read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Create: Any authenticated user can create notifications (for other users)
      allow create: if isAuthenticated();
      
      // Update: Users can only update their own notifications (mark as read)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Delete: Users can delete their own notifications
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
